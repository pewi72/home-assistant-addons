{
  "name": "Tibber MQTT",
  "version": "1.0.0",
  "slug": "tibber_mqtt",
  "description": "Publishes live Tibber data to MQTT",
  "startup": "application",
  "boot": "auto",
  "init": false,
  "hassio_api": false,
  "homeassistant_api": false,
  "hassio_role": "default",
  "environment": true,
  "arch": ["amd64", "armv7", "aarch64"],
  "options": {
    "tibber_token": "",
    "home_id": "",
    "mqtt_host": "core-mosquitto",
    "mqtt_port": 1883,
    "mqtt_user": "mqttuser",
    "mqtt_password": ""
  },
  "schema": {
    "tibber_token": "str",
    "home_id": "str",
    "mqtt_host": "str",
    "mqtt_port": "int",
    "mqtt_user": "str",
    "mqtt_password": "str"
  }
}
